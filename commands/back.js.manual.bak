        });
        return;
      }
      
      // Check if user has an active session
      const activeSession = await getActiveSession(user.id);
      if (!activeSession) {
        await interaction.editReply({
          content: "âŒ You don't have an active work session. Use `/signin` to start working first."
        });
        return;
      }
      
      // Check if user is not on break
      if (activeSession.Status !== 'Break') {
        await interaction.editReply({
          content: "âŒ You're not currently on break. Use `/break` to take a break first."
        });
